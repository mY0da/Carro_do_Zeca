<h1>Register new Car</h1>

<%= simple_form_for @car do |f| %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :car_type %>
    <%= f.input :model %>
    <%= f.input :registration_plate %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>

<% end %>
